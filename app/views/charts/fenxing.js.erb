$('#container').html("<img src='/images/ajax-loader.gif'>");

$.getJSON(<%= raw("'#{@fenxing_data_source}'") -%>, function(data) {
    $('#container').html("");
    var bar = [], vol = [], fenxingk = [], fenxing = [], flag = [], dataLength = data.length
    if (dataLength==0) 
    {
        return;
    }
    for(i = 0; i< dataLength; i++)
    {
        time = data[i][0]-5*60*1000;
        bar.push([time, data[i][1], data[i][2], data[i][3], data[i][4]]);
        vol.push([time, data[i][5]]);
        if(data[i].length>6)
        {
            fenxingk.push([time, data[i][6], data[i][7], data[i][8], data[i][9]]);
            if(data[i].length>10)
            {
                if(data[i][10]==1)
                {
                    fenxing.push([time, data[i][8]]);
                    flag.push({x: time, title:'底'});
                }
                else if(data[i][10]==2)
                {
                    fenxing.push([time, data[i][7]]);
                    flag.push({x: time, title:'顶'});
                }
            }
        }
    }
    
    chart1 = new Highcharts.StockChart({
    chart: {
    renderTo: 'container'
    },
    rangeSelector: {
    buttons: [
    {type:'day', count: 1, text: '1d'}
    ,{type:'day', count: 10, text: '10d'}
    ,{type:'month', count: 1, text: '1m'}
    //,{type:'year', count: 1, text: '1y'}
    ],
    selected: 0
    },
    title: {
    text: '缠中说禅 分型指示器'
    },

    xAxis: {
    dateTimeLabelFormats: {
    second: '%m-%d<br/>%H:%M:%S',
    minute: '%m-%d<br/>%H:%M',
    hour: '%m-%d<br/>%H:%M',
    day: '%Y-%m-%d',
    week: '%Y<br/>%m-%d',
    month: '%Y-%m',
    year: '%Y年'
    },
    //minRange: 30 * 24 * 3600 * 1000
    //maxRange: 24*3600*1000
    },
                                        
    yAxis: [{
        title: {
            text: 'K线'
        },
        height: 200,
        lineWidth: 2
    },{
        title: {
            text: '缠中说禅标准K线'
        },
        top: 300,
        height: 200,
        offset: 0,
        lineWidth: 2
    }, {
        title: {
            text: '成交量'
        },
        top: 550,
        height: 100,
        offset: 0,
        lineWidth: 2
    }],

    plotOptions: {
        candlestick: {
        color: 'green',
        upColor: 'red'
        }
    },

    series: [
    {
    type: 'candlestick',
    name: 'K线',
    yAxis: 0,
    data: bar
    }
    , {
    type: 'candlestick',
    name: '标准K线',
    data: fenxingk,
    yAxis: 1
    }
    , {
    type: 'column',
    name: '成交量',
    yAxis: 2,
    data: vol
    }
    , {
    name: '分型标注',
    id: 'fx',
    yAxis: 1,
    data: fenxing
    }
    , {
    type: 'flags',
    name: '分型标签',
    data: flag,
    yAxis: 1,
    onSeries: 'fx',
    shape: 'squarepin'
    }
    
    ]

    });


});
